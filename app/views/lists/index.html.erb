<p id="notice"><%= notice %></p>

<div class="container my-4">
  <h1>Lista</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>  
    <% @lists.each do |list| %>
    <%if current_user.id == list.event.user.id%>      
      <tr class="table-info">        
        <td class="border"><strong>Nombre:</strong> <%= list.name %></td>        
        <td class="border"><strong>Descripcion:</strong> <%= list.description %></td>
        <td class="border"><%= link_to 'Ver', list, class: 'btn btn-success' %></td>
        <td class="border"><%= link_to 'Editar', edit_list_path(list), class:'btn btn-primary' %></td>
        <td class="border"><%= link_to 'Eliminar', list, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-secondary' %></td>          
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', events_path, class:"btn btn-primary" %>
     



