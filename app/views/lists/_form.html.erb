
<%= form_with(model: list, local: true) do |form| %>
<% if list.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

  <ul>
    <% list.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group my-5">
  <%= form.label :name, "Nombre de la lista de deseos", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.text_field :name, id: :product_name %>
  </div>
</div>

<div class="form-group my-5">
  <%= form.label :description, "Descripcion", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.text_field :description, id: :product_name %>
  </div>
</div>

<%= hidden_field_tag :event_id, params[:event_id] %>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>