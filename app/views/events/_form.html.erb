<div class="container">
  <%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
      <% event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div class="col-sm">
          <div class="form-group my-3">
            <%= form.label :name, "Nombre", class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= form.text_field :name, id: :product_name, class:"form-control my-2"%>
            </div>
          </div>
        </div>
        <div class="form-group mb-3">
          <%= form.label :description, "Descripcion", class: "col-lg-2 control-label my-2" %>
          <div class="col-lg-10">
            <%= form.text_area :description, id: :product_name, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="col-sm">
        <%= image_tag  "title.png" %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= form.submit "cambiar", class:'btn btn-success'%>
  </div>
  <% end %>
</div>