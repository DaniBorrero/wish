<div class="text-center my-5">
  <p id="notice"><%= notice %></p>
  <div class="card">
    <h5 class="card-header">Evento</h5>
    <div class="card-body">
      <h5 class="card-title"><%= @event.name%></h5>
      <h6>Descripcion:</h6>
      <p class="card-text"><%=@event.description%></p>
      <%= link_to 'Editar', edit_event_path(@event),class: "btn btn-outline-primary" %>
      <%= link_to 'Volver', events_path,class: "btn btn-outline-success" %>      
      <%=link_to 'Ver listas del evento', {:controller => "lists", :action => "index", :event_id => @event.id }, class:"btn btn-outline-success m-4"%>              
      <%=link_to 'Agregar lista al evento', {:controller => "lists", :action => "new", :event_id => @event.id }, class:"btn btn-outline-success m-4%"%>      
    </div>
  </div>  
</div>